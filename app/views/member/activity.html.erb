<div style="width: 50%; margin-top: 15%;margin-left: 25%;">
    <a href="javascript:void(0);" class="btn btn-primary btn-sm" style="margin-bottom: 10px; float: right;" data-toggle="modal" data-target="#newlocation">New location</a>
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <td>Number</td>
                <td>Location</td>
                <td>Date</td>
            </tr>
        </thead>
        <body>
            <%
            number = 1
            @list_location.each do |data| 
            %>
                <tr>
                    <td><%= number %></td>
                    <td><%= data['name'] %></td>
                    <td><%= data['dates'] %> <%= data['times'] %></td>
                </tr>
            <%
            number+= 1
            end
            %>
        </body>
    </table>
</div>

<div class="modal fade" id="newlocation" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" >
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="H3">New location</h4>
            </div>
            <%= form_tag("/newlocation") do %>
                <div class="modal-body">
                    <div class="form-group">
                        <label>Location name <span style="color: red;">*</span></label>
                        <input class="form-control" type="text" name="a_location" required="required" maxlength="50"/>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light btn-sm" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary btn-sm">Publish</button>
                </div>
            <% end %>
        </div>
    </div>
</div>
